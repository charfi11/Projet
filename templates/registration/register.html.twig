{% extends 'base.html.twig' %}
{% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('register') }}
{% endblock %}
{% block title %}Register{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-light">
  <a class="navbar-brand text-white" href="/" style="font-size: 2.5em">Brea<strong class="text-danger">k</strong>Guys</a>
  <div class="vl"></div>
  <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarColor01">
  <div class="d-flex justify-content-end" style="width: 13%;">
   {% if app.user %}
      <img class="imgNav mr-2" src="../img/{{ app.user.avatar }}"/>
   {% else %}
    <ul class="navbar-nav mr-2">
      <li class="nav-item ml-3">
        <a class="nav-link" href="/login">login</a>
      </li>
      <li class="nav-item ml-2">
        <a class="nav-link" href="/register">register</a>
      </li>
      </ul>
      {% endif %}
          </div>
      </div>
</nav>
<main>
{% if app.user %}
<div class="navModal" id="navModalNone">
      <ul class="navbar-nav mr-auto">
      <li class="avatarCamera">
      <div class="containCam">
       <img class="imgNavModal" src="../img/{{ app.user.avatar }}"/>
       <i class="fas fa-camera camera" id="cam"></i>
       </div>
      </li>
      <li class="mt-2">
      <h5><strong>{{ app.user.username }}</strong></h5>
      </li>
      <li>
      <p>{{ app.user.email }}</p>
      </li>
      <li>
      <a class="btn btn-info nav-link mt-3 btnSpace" href="/myspace" style="width: 60%;">Votre espace</a>
      </li>
      <hr>
      <li>
      <a class="btn btn-light nav-link text-dark logoutBtn mt-2" href="{{ path('app_logout') }}">Déconnexion</a>
      </li>
      {% endif %}
    </ul>
</div>
    {{ form_start(registrationForm) }}
    <h2 class="mb-5 d-flex justify-content-center">Register</h2>
    <label><i class='far fa-user mr-1'></i>Choisissez votre pseudonyme</label>
        {{ form_widget(registrationForm.username) }}
       <label><i class="fas fa-envelope mr-1"></i>Inscrivez votre email</label>
        {{ form_widget(registrationForm.email) }}
        <label><i class="fas fa-lock mr-1"></i>Choisissez un mot de passe</label>
        {{ form_widget(registrationForm.password) }}
        <label></i>Sélectionnez une image</label>
        {{form_widget(registrationForm.avatar)}}
        <button class="btn btnreg d-flex justify-content-center mt-5 mb-2">S'inscrire
        <i class="mt-1 ml-3 fas fa-arrow-right"></i></button>
    {{ form_end(registrationForm) }}
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('register') }}
{% endblock %}